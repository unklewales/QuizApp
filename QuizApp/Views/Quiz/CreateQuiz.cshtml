
@model QuizView


<form method="post">
    
    <div class=" border p-3 mt-4 ">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Quiz</h2>
            <hr />
        </div>
        <div class=" mb-3 row p-1">
            <label asp-for="Quiz.Title" class="p-0"></label>
            <input asp-for="Quiz.Title" class="form-control" />
            
        </div>
        <div class=" mb-3 row p-1">
            <select asp-for="@Model.Quiz.DepartmentId" asp-items="@Model.DepartmentList" class=" form-select p-0">
                <option disabled selected>-Selected Category-</option>
            </select>

            <span asp-validation-for="Quiz.DepartmentId" class="text-danger"></span>
        </div>


        

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>

            </div>
            <div class="col-6 col-md-3">

                <a asp-controller="Department" asp-action="Index" class="form-control btn btn-outline-secondary border">Back to List</a>
            </div>
        </div>
    </div>
</form>


