@model List<Quiz>
 <div class="container">
    <div class="row pt-4 pb-4">
         <div class=" col-6">
            <h2 class="text-primary">
                Quiz List
            </h2>
         </div>
        <div class="col-6 text-end">
            <a asp-controller="Quiz" asp-action="CreateQuiz" class="btn btn-primary">
                Create
            </a>
            
        </div>
     </div>
    

  <table id="catTable" class="table table-striped table-bordered" style="width:100%">
     <thead>
        <tr>
            <th>
             Quiz title
            </th>
            
             <th>
               Department    
             </th>

             <th>
                   
             </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
            <td>@obj.Title</td>
                    <td>@obj.Department.DepartmentalName</td>
            
            <td class=" btn-grp" role="group">
                        <a asp-controller="Question" asp-action="CreateQuestion" asp-route-id="@obj.QuizId" class="btn btn-primary mx-4">
                    Create Questions
                </a>
            </td>

                   
            </tr> 
        }
        </tbody>
    </table>
</div>
